@model LiteCommerce.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <form role="form" action="~/Shipper/Input" method="post">
        <div class="box-header text-right">
            <a href="~/Shipper">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" name="ShipperID" value="@Model.ShipperID" />
            <div class="form-group">
                <label>Company Name:</label>
                @Html.ValidationMessage("CompanyName", new { style = "color:red;font-style: italic;font-weight: bold;" })
                <input type="text" class="form-control" placeholder="Enter Company Name" value="@Model.CompanyName" name="CompanyName" required>
            </div>

            <div class="form-group">
                <label>Phone:</label>
                <input type="text" class="form-control" placeholder="Phone" value="@Model.Phone" name="Phone"required>
            </div>
            @*<div>
                @Html.ValidationMessage("")
            </div>*@
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Shipper">
                Cancel
            </a>
        </div>
    </form>
</div>





