@model LiteCommerce.DomainModels.Employee
@{

}
<div class="box box-primary">
    <form role="form" action="~/Employee/Input" method="post" enctype="multipart/form-data">
        <div class="box-header text-right">
            <a href="~/Employee">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" value="@Model.EmployeeID" name="EmployeeID" />
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>FirstName:</label>
                    @Html.ValidationMessage("FirstName", new { style = "color:red;font-style: italic;font-weight: bold;" })
                    <input type="text" class="form-control" placeholder="FirstName" name="FirstName" value="@Model.FirstName">
                </div>
                <div class="col-sm-6">
                    <label>LastName:</label>
                    @Html.ValidationMessage("FirstName", new { style = "color:red;font-style: italic;font-weight: bold;" })
                    <input type="text" class="form-control" placeholder="Ex:LastName" name="LastName" value="@Model.LastName">
                </div>
            </div>
            <div class="form-group">
                <label>Title:</label>
                @Html.ValidationMessage("Title", new { style = "color:red;font-style: italic;font-weight: bold;" })
                <input type="text" class="form-control" placeholder="Sales Representative" name="Title" value="@Model.Title">
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <label>BirthDate:</label>
                    @Html.ValidationMessage("BirthDate", new { style = "color:red;font-style: italic;font-weight: bold;" })
                    <input type="text" class="form-control" name="BirthDate" value="@Model.BirthDate" required>
                </div>
                <div class="col-sm-6">
                    <label>HireDate:</label>
                    @Html.ValidationMessage("HireDate", new { style = "color:red;font-style: italic;font-weight: bold;" })
                    <input type="text" class="form-control" name="HireDate" value="@Model.HireDate">
                </div>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" placeholder="abc@gmail.com" name="Email" value="@Model.Email">
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" placeholder="507 - 20th Ave. E.Apt. 2A" name="Address" value="@Model.Address">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Country:</label>
                    @Html.DropDownListFor(m => m.Country, SelectListHelper.Countries(), new { @class = "form-control" })
                    @*<select class="form-control" name="Country">
                        <option value="">-- Choose Country --</option>
                        @foreach (var country in SelectListHelper.Countries())
                        {
                            if (Model.Country == country.Value)
                            {
                                <option value="@country.Value" selected="@country.Text">@country.Text</option>
                            }
                            else
                            {
                                <option value="@country.Value">@country.Text</option>
                            }
                        }
                    </select>*@
                </div>
                <div class="col-sm-6">
                    <label>City:</label>
                    <input type="text" class="form-control" placeholder="Ex: New Orleans" name="City" value="@Model.City">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>HomePhone:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control" name="HomePhone" value="@Model.HomePhone">
                    </div>
                </div>

            </div>

            <div class="form-group">
                <label>Notes:</label>
                <textarea class="form-control " placeholder="Enter Note" name="Notes" rows="10" style="height:50%;">@Model.Notes</textarea>
            </div>
            <div class="form-group">
                <label>PhotoPath:</label>
                @Html.HiddenFor(m=>m.PhotoPath)
               @*<input type="hidden" name="PhotoPath" value="@Model.PhotoPath" />*@
                <input type="file" class="form-control" name="uploadfile">
            </div>
            <input type="hidden" name="Password" value="@Model.Password">

            <div>@Html.ValidationMessage("")</div>
        </div>

        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Employee">
                Cancel
            </a>
        </div>
    </form>
</div>




