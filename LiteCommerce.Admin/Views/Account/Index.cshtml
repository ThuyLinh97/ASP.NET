    <!-- Main content -->
<form class="form-horizontal" role="form" action="~/Account/Index" method="post" enctype="multipart/form-data">
    <section class="content">
        <div class="row">         
            <!-- /.col -->
            <div class="box box-primary">
                <div class="nav-tabs-custom">
                    <div class="text-center" style="width:350px; height:250px; position:absolute; z-index:999; top:0; right:0; padding-left:50px; background:#ffffff;">
                        <!-- Profile Image -->
                                <img src="~/Images/UploadFile/@Model.PhotoPath" class="img-circle text-center" alt="User Image" width="210" height="200" />                       
                                @Html.HiddenFor(m => m.PhotoPath)
                                @*<input type="hidden" name="PhotoPath" value="@Model.PhotoPath" />*@
                                <input type="file" id="changeImg" class="form-control" name="uploadfile" style="display:none">
                                <label for="changeImg" class="btn btn-info text-center"style="margin-top:10px"><b>CHANGE AVATAR</b></label>
                          
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="settings">

                            <input type="hidden" value="@Model.EmployeeID" name="EmployeeID" />
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">FirstName</label>
                                @Html.ValidationMessage("FirstName", new { style = "color:red;font-style: italic;font-weight: bold;" })
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="FirstName" value="@Model.FirstName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputName" class="col-sm-2 control-label">LastName</label>
                                @Html.ValidationMessage("LastName", new { style = "color:red;font-style: italic;font-weight: bold;" })
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="LastName" value="@Model.LastName">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputBirthDate" class="col-sm-2 control-label">BirthDate</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="BirthDate" value="@Model.BirthDate"required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputHireDate" class="col-sm-2 control-label">HireDate</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="HireDate" value="@Model.HireDate"required>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputAddress" class="col-sm-2 control-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Address" value="@Model.Address">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputCity" class="col-sm-2 control-label">City</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="City" value="@Model.City">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputCountry" class="col-sm-2 control-label">Country</label>
                                <div class="col-sm-10">
                                    <select class="form-control" name="Country">
                                        <option value="">-- Choose Country --</option>
                                        @foreach (var country in SelectListHelper.Countries())
                                        {
                                            if (Model.Country == country.Value)
                                            {
                                                <option value="@country.Value" selected="@country.Text">@country.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@country.Value">@country.Text</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputHomePhone" class="col-sm-2 control-label">HomePhone</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" name="HomePhone" value="@Model.HomePhone">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control" name="Email" value="@Model.Email">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputNotes" class="col-sm-2 control-label">Notes</label>
                                <div class="col-sm-10">
                                    <textarea class="form-control" name="Notes">@Model.Notes</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-danger">Submit</button>
                                </div>
                            </div>
                            <input type="hidden" class="form-control" placeholder="Sales Representative" name="Title" value="@Model.Title">
                            <input type="hidden" name="Password" value="@Model.Password">
                            @*<div>
                                @Html.ValidationMessage("")
                            </div>*@

                        </div>
                        <!-- /.tab-pane -->
                    </div>
                    <!-- /.tab-content -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->

</form>
